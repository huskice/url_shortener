generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id          Int           @id @default(autoincrement())
  originalUrl String
  shortUrl    String
  code        String        @unique
  urlAnalytic UrlAnalytic[]
}

model UrlAnalytic {
  id          Int     @id @default(autoincrement())
  urlCode     String
  browserName String?
  countryName String?
  cookie      String?
  referer     String?
  url         Url     @relation(fields: [urlCode], references: [code])
}
